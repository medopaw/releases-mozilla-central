DEPTH       = @DEPTH@
topsrcdir   = @top_srcdir@
srcdir      = @srcdir@
VPATH       = @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE              = dom
XPIDL_MODULE        = dom_sdcard
LIBRARY_NAME        = domsdcard_s
LIBXUL_LIBRARY      = 1
FORCE_STATIC_LIB    = 1
GRE_MODULE          = 1
FAIL_ON_WARNINGS := 1

include $(topsrcdir)/dom/dom-config.mk

EXPORTS_NAMESPACES = mozilla/dom/sdcard

XPIDLSRCS =               \
  nsIDOMFileSystem.idl \
  nsIDOMEntry.idl \
  nsIDOMDirectoryEntry.idl \
  nsIDOMFileEntry.idl \
  nsIDOMDirectoryReader.idl \
  nsIDOMEntryCallback.idl \
  nsIDOMEntriesCallback.idl \
  nsIDOMMetadata.idl \
  nsIDOMMetadataCallback.idl \
  nsIDOMVoidCallback.idl \
  nsIDOMErrorCallback.idl \
  nsIDOMEntryArray.idl \
  $(NULL)

EXTRA_COMPONENTS =       \
  FileSystem.js       \
  DirectoryEntry.js       \
  FileEntry.js       \
  Metadata.js       \
  DirectoryReader.js       \
  EntryArray.js       \
  SDCard.manifest \
  $(NULL)

EXTRA_JS_MODULES =   \
  SDCardUtils.jsm \
  $(NULL)

include $(topsrcdir)/config/config.mk
include $(topsrcdir)/ipc/chromium/chromium-config.mk
include $(topsrcdir)/config/rules.mk

XPIDL_FLAGS += \
  -I$(topsrcdir)/dom/interfaces/base \
  -I$(topsrcdir)/dom/interfaces/events \
  $(NULL)
