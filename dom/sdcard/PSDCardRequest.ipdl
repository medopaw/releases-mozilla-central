include protocol PContent;

namespace mozilla {
namespace dom {
namespace sdcard {

struct ErrorResponse
{
  nsString error;
};

struct SuccessResponse
{
};

struct EntryResponse
{
  nsString path;
};

struct EntriesResponse
{
  nsString[] paths;
};

struct MetadataResponse
{
  int64_t modificationTime;
  uint64_t size;
};

union SDCardResponseValue
{
  ErrorResponse;
  SuccessResponse;
  EntryResponse;
  EntriesResponse;
  MetadataResponse;
};

sync protocol PSDCardRequest
{
  manager PContent;

child:
  __delete__(SDCardResponseValue response);
};

} // namespace sdcard
} // namespace dom
} // namespace mozilla
